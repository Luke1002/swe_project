<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane minHeight="480.0" minWidth="640.0" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.swe.libraryprogram.view.ErrorController">
   <children>
      <VBox alignment="BOTTOM_CENTER" minHeight="480.0" minWidth="640.0">
         <children>
            <Label fx:id="errorLabel" text="Connection not established">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin></Label>
            <Button onAction="#onTryAgain" mnemonicParsing="false" text="Try again">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin></Button>
            <HBox alignment="BOTTOM_RIGHT" prefHeight="200.0" prefWidth="640.0">
               <children>
                  <Button  onAction="#onQuit" mnemonicParsing="false" text="Quit">
                     <HBox.margin>
                        <Insets bottom="25.0" left="30.0" right="30.0" top="25.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</Pane>
